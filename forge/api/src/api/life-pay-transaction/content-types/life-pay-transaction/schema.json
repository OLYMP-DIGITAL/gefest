{
  "kind": "collectionType",
  "collectionName": "life_pay_transactions",
  "info": {
    "singularName": "life-pay-transaction",
    "pluralName": "life-pay-transactions",
    "displayName": "Life Pay транзакции",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "shareValue": {
      "type": "biginteger",
      "required": true
    },
    "shareCount": {
      "type": "integer",
      "default": 0,
      "required": true
    },
    "dollarRate": {
      "type": "float"
    },
    "transactionId": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "transactionLink": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "open",
        "pending",
        "success",
        "blocked",
        "error"
      ],
      "default": "open"
    },
    "amount": {
      "type": "biginteger",
      "required": true
    },
    "currency": {
      "type": "enumeration",
      "enum": [
        "RUR",
        "ETH",
        "USDT"
      ]
    }
  }
}
